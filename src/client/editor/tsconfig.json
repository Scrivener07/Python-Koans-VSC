{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "types": ["monaco-editor"],
        "sourceMap": true,
        "rootDir": ".",
        "paths": {
            "../shared/*": [
                "../../shared/*"
            ]
        }
    },
    "references": [
        {
            "path": "../../shared"
        }
    ],
    "include": [
        "**/*"
    ]
}
