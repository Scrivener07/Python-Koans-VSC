{
    "extends": "../../tsconfig-base.json",
    "compilerOptions": {
        "noEmit": true,
        "esModuleInterop": true,
        "target": "ES2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "rootDir": ".",
        "paths": {
            "../shared/*": [
                "../../shared/*"
            ]
        },
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": ["monaco-editor"]
    },
    "references": [
        {
            "path": "../../shared"
        }
    ],
    "include": [
        "**/*"
    ]
}
